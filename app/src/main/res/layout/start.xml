<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:hint="inserisci cosa"
        android:minHeight="48dp"
        android:completionThreshold="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171"
        android:background="@drawable/stondato"
        android:drawableEnd="@drawable/search"
        android:drawableTint="#919095"
        android:drawablePadding="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textAlignment="center"
        android:textColor="#FFF"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipgruppo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input">


        <com.google.android.material.chip.Chip
            android:id="@+id/chipProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="prof"
            android:textAlignment="center"
            app:chipIcon="@drawable/prof"
            app:chipIconTint="#919095"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipClassi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="classi"
            android:textAlignment="center"
            app:chipIcon="@drawable/classi"
            app:chipIconTint="#919095"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="aule"
            android:textAlignment="center"
            app:chipIcon="@drawable/aule"
            app:chipIconTint="#919095"/>
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipConferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:text="conferma"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipgruppo"
        app:chipIcon="@drawable/check"
        app:chipIconTint="#919095"/>

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#312f36"
        />

</androidx.constraintlayout.widget.ConstraintLayout>